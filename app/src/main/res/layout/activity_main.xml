<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="213dp"
        android:layout_height="54dp"
        android:fontFamily="@font/arbutus_slab"

        android:gravity="center"
        android:textColor="#235854"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="225dp"
        android:layout_height="187dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/baseline_image_24"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="173dp"
        android:layout_height="23dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Capture Count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="173dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="173dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Binary Charge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="173dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Binary Charging"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="173dp"
        android:layout_height="23dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Connectivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="173dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Frequency(min)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/count"
        android:layout_width="173dp"
        android:layout_height="23dp"

        android:layout_marginTop="30dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/charging"
        android:layout_width="173dp"
        android:layout_height="23dp"

        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectivity" />

    <TextView
        android:id="@+id/location"
        android:layout_width="173dp"
        android:layout_height="50dp"

        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charge" />

    <TextView
        android:id="@+id/charge"
        android:layout_width="173dp"
        android:layout_height="23dp"

        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charging" />

    <TextView
        android:id="@+id/connectivity"
        android:layout_width="173dp"
        android:layout_height="23dp"

        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frequency" />

    <TextView
        android:id="@+id/frequency"
        android:layout_width="173dp"
        android:layout_height="23dp"

        android:layout_marginTop="25dp"
        android:text="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count" />


    <Button
        android:id="@+id/refreshbtn"
        android:layout_width="245dp"
        android:layout_height="62dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_curve"

        android:backgroundTint="#235854"
        android:text="Manual Data Refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>